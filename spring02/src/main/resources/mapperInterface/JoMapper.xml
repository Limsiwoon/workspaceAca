<!-- joupdate -->
	<update id="joupdate">
		update jo set jname = #{jname} , captain = #{captain}, project = #{project}, slogan = #{slogan} 
		where jno = #{jno} 
	</update>

<!-- joinsert -->
	<insert id="joinsert">
		insert into jo values (#{jno} ,#{jname} ,#{captain},#{project},#{slogan})
	</insert>

<!-- joDelete -->
	<delete id="joDelete">
		delete from jo where jno = #{jno}
	</delete>


</mapper>